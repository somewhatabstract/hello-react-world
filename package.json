{
  "name": "hello-react-world",
  "version": "0.2.0",
  "private": true,
  "dependencies": {},
  "scripts": {
    "clean": "rm -rf dist",
    "test": "jest --colors --config jest.config.js",
    "coverage": "jest --colors --config jest.config.js --coverage",
    "lint": "tsc && eslint --report-unused-disable-directives --config eslint.config.js \"{src,bin,__{tests,mocks}__}/**/*.[jt]s\"",
    "build:noclean": "babel src --out-dir dist --extensions \".ts\" --source-maps --config-file ./babel.config.js --ignore \"**/__tests__/**/*.ts\",\"**/__mocks__/**/*.ts\"",
    "build": "npm run clean && npm run build:noclean",
    "pretty": "pretty-quick"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@types/jest": "^25.1.3",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-extended": "^0.11.5",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "typescript": "^3.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm test --findRelatedTests",
      "npm run pretty"
    ]
  }
}
